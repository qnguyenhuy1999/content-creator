{
  "name": "content-creator",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .tanstack build .turbo",
    "bootstrap": "pnpm install",
    "install:ci": "pnpm install --frozen-lockfile",
    "prepare": "turbo lint"
  },
  "devDependencies": {
    "turbo": "~2.0.0",
    "typescript": "~5.7.3"
  },
  "x-monorepo-policy": {
    "summary": "Exact runtime pins, tilde tooling, hybrid lint (Biome + ESLint)",
    "versioning": "Exact for runtime/build-output deps; tilde for tooling; lockfile for reproducibility",
    "workspace": {
      "linker": "hoisted",
      "publicHoistPattern": false
    },
    "lint": {
      "biome": [
        "apps/web-app",
        "apps/admin",
        "packages/ui"
      ],
      "eslint": [
        "apps/web-landing",
        "apps/api",
        "apps/admin-api",
        "apps/worker"
      ]
    },
    "runtimePins": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "next": "14.2.7",
      "@nestjs/core": "10.3.8",
      "tailwindcss": "4.0.0",
      "postcss": "8.4.47",
      "autoprefixer": "10.4.20"
    }
  },
  "engines": {
    "node": ">=20"
  }
}