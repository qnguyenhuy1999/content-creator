{
  "name": "content-creator",
  "private": true,
  "packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "clean": "pnpm -r exec rm -rf node_modules dist .next .tanstack build .turbo",
    "bootstrap": "pnpm install",
    "install:ci": "pnpm install --frozen-lockfile",
    "ci": "turbo lint && turbo test && turbo typecheck",
    "db:generate": "pnpm --filter=@content-creator/database run db:generate",
    "db:migrate": "pnpm --filter=@content-creator/database run db:migrate",
    "db:seed": "pnpm --filter=@content-creator/database run db:seed",
    "db:studio": "pnpm --filter=@content-creator/database run db:studio",
    "admin:dev": "pnpm --filter=@content-creator/admin run dev",
    "web-app:dev": "pnpm --filter=@content-creator/web-app run dev",
    "web-landing:dev": "pnpm --filter=@content-creator/web-landing run dev",
    "api:dev": "pnpm --filter=@content-creator/api run dev",
    "admin-api:dev": "pnpm --filter=@content-creator/admin-api run dev",
    "packages/ui:dev": "pnpm --filter=@content-creator/ui run dev",
    "prepare": "turbo lint"
  },
  "devDependencies": {
    "husky": "9.0.11",
    "lint-staged": "15.2.11",
    "turbo": "2.5.6",
    "typescript": "catalog:repo-typescript"
  },
  "x-monorepo-policy": {
    "summary": "Exact runtime pins, tilde tooling, hybrid lint (Biome + ESLint)",
    "versioning": "Exact for runtime/build-output deps; tilde for tooling; lockfile for reproducibility",
    "workspace": {
      "linker": "hoisted",
      "publicHoistPattern": false
    },
    "lint": {
      "biome": [
        "apps/web-app",
        "apps/admin",
        "packages/ui"
      ],
      "eslint": [
        "apps/web-landing",
        "apps/api",
        "apps/admin-api",
        "apps/worker"
      ]
    },
    "runtimePins": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "next": "14.2.7",
      "@nestjs/core": "10.3.8",
      "tailwindcss": "4.0.0",
      "postcss": "8.4.47",
      "autoprefixer": "10.4.20"
    }
  },
  "engines": {
    "node": ">=20"
  }
}