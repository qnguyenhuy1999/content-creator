    "jsdom": "~25.0.1",
    "playwright": "^1.57.0",
    "prettier": "^3.4.2",
    "storybook": "~10.1.10",
    "typescript": "~5.7.3",
    "typescript-eslint": "~8.46.4",
    "vite": "~7.1.12",
    "vitest": "~4.0.16"
  }
